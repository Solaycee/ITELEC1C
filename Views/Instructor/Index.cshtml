
@{
}

@model IEnumerable<Instructor>;

<style>
  table {
    border-collapse: collapse;
    width: 100%;
  }

  th, td {
    padding: 10px;
    border: 1px solid black;
  }
</style>

<div style="text-align: center;">
    <a class="btn btn-secondary" asp-action="AddInstructor">Add Instructor</a>
</div>

<br/>

<table class="padding">

    <tr>
        <th colspan="6">Instructor List</th>
    </tr>

    <tr>
        <th>Name:</th>
        <th>Date Hired</th>
        <th>Email:</th>
        <th>IsTenured?</th>
        <th>Rank</th>
        <th>Details</th>
    </tr>

     @foreach (var Instructor in Model)
        {
    <tr>
        <td>@Instructor.FirstName @Instructor.LastName</td>
        <td>@Instructor.DateHired</td>
        <td>@Instructor.Email</td>
        <td>@Instructor.IsTenured</td>
        <td>@Instructor.Rank</td>
        <td><a asp-action="ShowDetail" asp-route-id="@Instructor.Id">Show Details</a></td>
    </tr>
    }

</table>
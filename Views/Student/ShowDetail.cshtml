@model Student;

<h1>Student Details</h1>

@if(ViewBag.StudentProfilePhoto != null)
{
    <img src = "@ViewBag.StudentProfilePhoto" 
    class="img-thumbnail" width="20%" alt="profile picture for @Model.LastName"/>
}

<table class="table table-dark">
    <tr>
        <th>Id</th>
        <td>@Model.Id</td>
    </tr>
    <tr>
        <th>Last Name</th>
        <td>@Model.LastName</td>
    </tr>
    <tr>
        <th>First Name</th>
        <td>@Model.FirstName</td>
    </tr>
    <tr>
        <th>Course</th>
        <td>@Model.Course</td>
    </tr>
    <tr>
        <th>Email</th>
        <td>@Model.Email</td>
    </tr>
    <tr>
        <th>Admission Date</th>
        <td>@Model.AdmissionDate</td>
    </tr>
</table>
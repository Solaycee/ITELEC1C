@{
}
@model Instructor
<style>

    form {
        margin: 20px;
        padding: 20px;
        border: 1px solid #ccc;
        border-radius: 5px;
        background-color: #f9f9f9;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    s

    .form-group {
        margin: 20px;
        padding: 5px;
    }

</style>

<div style="text-align: center">
    <h1>Add a New Instructor</h1>
</div>

<form asp-action="AddInstructor" asp-controller="Instructor"
      method="post">

    <div class="form-group">
        <label asp-for="Id">Instructor Id</label>
        <input asp-for="Id" class="form-control"
               id="Id" placeholder="Enter Instructor Id">
    </div>
    <div class="form-group">
        <label asp-for="FirstName">First Name</label>
        <input asp-for="FirstName" class="form-control"
               id="FirstName" placeholder="Enter First Name">
    </div>
    <div class="form-group">
        <label asp-for="LastName">Last Name</label>
        <input asp-for="LastName" class="form-control"
               id="LastName" placeholder="Enter Last Name">
    </div>
    <div class="form-group">
        <label asp-for="Email">Enter University Email</label>
        <input asp-for="Email" class="form-control"
         id="Email" placeholder="Enter University Email">
    </div>
    <div class="form-group">
        <label asp-for="Rank">Course</label>
        <select asp-for="Rank" asp-items="@Html.GetEnumSelectList(typeof(Rank))"
        class="form-control" id="Rank" placeholder="Choose Rank"></select>
    </div>
    <div class="form-group">
        <label asp-for="DateHired">Admission Date</label>
        <input asp-for="DateHired" class="form-control"
        id="DateHired" placeholder="Enter Date Hired">
    </div>
    <div class="form-group">
        <label asp-for="IsTenured">Course</label>
        <select asp-for="IsTenured" asp-items="@Html.GetEnumSelectList(typeof(IsTenured))"
         class="form-control" id="IsTenured" placeholder="Choose Tenure"></select>
    </div>
    <br />

    <div style="text-align: center;">
        <button type="submit" class="btn btn-primary">Submit</button>
     </div>
</form>